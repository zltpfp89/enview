<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
  
  <bean id="_embeddedSolrHomeSysPropSetter" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <meta key="j2:cat" value="default" />
    <property name="targetClass" value="java.lang.System" />
    <property name="targetMethod" value="setProperty" />
    <property name="arguments">
      <list>
        <value>solr.solr.home</value>
        <value>${search.embedded.solr.solr.home}</value>
      </list>
    </property>
  </bean>
  
  <bean id="_embeddedSolrDataDirPropSetter" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean" depends-on="_embeddedSolrHomeSysPropSetter">
    <meta key="j2:cat" value="default" />
    <property name="targetClass" value="java.lang.System" />
    <property name="targetMethod" value="setProperty" />
    <property name="arguments">
      <list>
        <value>solr.data.dir</value>
        <value>${search.embedded.solr.data.dir}</value>
      </list>
    </property>
  </bean>
  
  <bean id="org.apache.solr.core.CoreContainer" class="org.apache.solr.core.CoreContainer" destroy-method="shutdown">
    <meta key="j2:cat" value="default or search" />
    <constructor-arg value="${search.embedded.solr.solr.home}" />
    <constructor-arg>
      <bean class="java.io.File">
        <meta key="j2:cat" value="default or search" />
        <constructor-arg value="${search.embedded.solr.solr.home}/solr.xml" />
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="org.apache.solr.client.solrj.SolrServer" class="org.apache.solr.client.solrj.embedded.EmbeddedSolrServer" depends-on="_embeddedSolrDataDirPropSetter">
    <meta key="j2:cat" value="default or search" />
    <constructor-arg ref="org.apache.solr.core.CoreContainer" />
    <constructor-arg value="js" />
  </bean>
  
  <bean id="com.saltware.enview.search.SearchEngine" class="com.saltware.enview.search.solr.SolrSearchEngineImpl">
    <meta key="j2:cat" value="default or search" />
    <constructor-arg ref="org.apache.solr.client.solrj.SolrServer" />
    <constructor-arg type="boolean" value="${search.index.optimizeAfterUpdate}" />
    <constructor-arg ref="com.saltware.enview.search.HandlerFactory" />
  </bean>
  
</beans>
